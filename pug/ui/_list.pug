mixin list(items)
    each item, index in items
        - var gap = 3;
        if item.chip !== null 
            - gap = 1
        div(class="flex gap-"+ gap +"")
            if item.img !== null 
                img(src=item.img.src, class="w-6 h-6 object-contain")
            if item.link !== null 
                div(class="group")
                    a(href=item.link, class="font-inter font-normal text-base text-white group-hover:underline group-hover:underline-offset-2") #{item.name}
            else
                p(class="font-inter font-semibold text-base text-white") #{item.name}
            if item.chip !== null 
                p(class="font-inter font-semibold text-sm text-primary") #{item.chip}