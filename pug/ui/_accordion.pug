mixin accordion(items)
    - var path = "./local/templates/nmigroup"
    each item, index in items
        div(accordion='', class="flex flex-col rounded-lg shadow-md transition-all shadow-custom-1 border overflow-hidden bg-white")
            div(class="flex justify-between items-center py-2 pl-6 pr-3 cursor-pointer")
                p(class="font-inter font-semibold text-base leading-[1.5] text-gray-600") #{item.title}
                svg(accordion-icon='', width="18", height="18", viewBox="0 0 32 32", fill="none", xmlns="http://www.w3.org/2000/svg", class="object-contain transition-transform duration-300 transform stroke-primary" )
                    path(d="M26 12L16 22L6 12", stroke="", stroke-width="2", stroke-linecap="round", stroke-linejoin="round")
            div(accordion__body='', class="overflow-hidden transition-all duration-300 max-h-0")
                div(class="pb-4 px-6")
                    p(class="font-inter font-normal text-base leading-[1.5] text-gray-600") #{item.text}