mixin pagination(items)
    - var path = "./local/templates/nmigroup"
    div(class="flex items-center")
        each item, index in items
            - var classNameBlock = "cursore-pointer min-w-10 rounded-sm flex items-center justify-center group"
            if index === 3 || index === 5 || index === 6
                - classNameBlock = classNameBlock + " xs:hidden sm:flex"
            else 
                - classNameBlock = classNameBlock + " flex"
            div(class=classNameBlock)
                if item.link === null
                    p(class="w-full font-inter font-semibold text-sm text-gray-600 leading-[1.7] bg-white p-[0.62rem] border-r border-gray-200 flex items-center justify-center") #{item.name}
                else 
                    if item.name === "Назад"
                        a(href=item.link, class="w-full font-inter font-semibold text-sm text-gray-600 leading-[1.7] flex gap-2 items-center bg-white px-4 py-[0.62rem] border-r border-gray-200 rounded-l-full group-hover:bg-[#f6f6f7]")
                            img(src=`${path}/img/icons/ArrowLeft.svg`, alt="иконка", class="w-5 h-5 object-contain icon-filter-gray-600")
                            | #{item.name}
                    else if item.name === "Далее"
                        a(href=item.link, class="font-inter font-semibold text-sm text-gray-600 leading-[1.7] flex gap-2 items-center bg-white px-4 py-[0.62rem] border-l border-gray-200 rounded-r-full group-hover:bg-[#f6f6f7]")
                            | #{item.name}
                            img(src=`${path}/img/icons/ArrowLeft.svg`, alt="иконка", class="w-5 h-5 object-contain icon-filter-gray-600 rotate-180")
                    else
                        - var className = "w-full font-inter font-semibold text-sm text-gray-600 leading-[1.7] p-[0.62rem] flex items-center justify-center group-hover:bg-[#f6f6f7]"
                        if item.active === true 
                            - className = className + " bg-[#f6f6f7] "
                        else 
                            - className = className + " bg-white "
                        if index !== items.length - 2
                            - className = className + " border-r border-gray-200 "
                        a(href=item.link, class=className) #{item.name}